{
  "private": true,
  "packageManager": "pnpm@7.3.0",
  "scripts": {
    "dev": "pnpm -C packages/editor dev",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 && pretty-quick --check",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json && pretty-quick",
    "cz": "czg",
    "format": "prettier --write .",
    "preinstall": "npx --yes only-allow pnpm",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@element-plus/eslint-config": "^0.0.20220803",
    "cz-git": "^1.3.10",
    "czg": "^1.3.10",
    "eslint": "^8.21.0",
    "eslint-plugin-markdown": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  },
  "engines": {
    "node": ">= 16",
    "pnpm": ">=7"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
